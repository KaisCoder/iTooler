<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="iWheelView">










    </declare-styleable>

    <declare-styleable name="WheelView">
        <!--文字大小-->
        <attr name="iTextSize" format="dimension" />
        <!--是否自适应文字大小以完全显示过长的文字-->
        <attr name="isAutoFitTextSize" format="boolean" />
        <!--文字对齐方式-->
        <attr name="iTextAlign" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--文字距离边界的外边距-->
        <attr name="iTextMargin" format="dimension" />
        <!--未选中文字颜色-->
        <attr name="iTextColorNormal" format="color" />
        <!--被选中的文字颜色-->
        <attr name="iTextColorSelect" format="color" />
        <!--行间距-->
        <attr name="iLineSpacing" format="dimension" />
        <!--数据为Integer类型时是否需要转换-->
        <attr name="isIntNeedFormat" format="boolean" />
        <!--Integer类型转换格式-->
        <attr name="iIntFormat" format="string" />
        <!--可见item数-->
        <attr name="iVisibleItems" format="integer" />
        <!--当前选中下标-->
        <attr name="iSelectItemPosition" format="integer" />
        <!--是否循环滚动-->
        <attr name="isCyclic" format="boolean" />

        <!--是否显示分割线-->
        <attr name="isShowDivider" format="boolean" />
        <!--分割线类型-->
        <attr name="iDividerType" format="enum">
            <enum name="fill" value="0" />
            <enum name="wrap" value="1" />
        </attr>
        <!--分割线颜色-->
        <attr name="iDividerColor" format="color" />
        <!--分割线高度-->
        <attr name="iDividerHeight" format="dimension" />
        <!--wrap类型下分割线内边距-->
        <attr name="iDividerPaddingForWrap" format="dimension" />

        <!--是否是弯曲（3D）效果-->
        <attr name="isCurved" format="boolean" />
        <!--弯曲（3D）效果左右圆弧偏移效果方向 可向指定方向偏移-->
        <attr name="iCurvedArcDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--弯曲（3D）效果左右圆弧偏移效果方向系数 偏移系数-->
        <attr name="iCurvedArcDirectionFactor" format="float" />
        <!--弯曲（3D）效果选中后折射的偏移 与字体大小的比值，1为不偏移 越小偏移越明显-->
        <attr name="iCurvedRefractRatio" format="float" />

        <!--是否绘制选中区域-->
        <attr name="isDrawSelectRect" format="boolean" />
        <!--选中区域颜色-->
        <attr name="iSelectRectColor" format="color" />

    </declare-styleable>

    <declare-styleable name="iWheel_Year">
        <attr name="iStartYear" format="integer" />
        <attr name="iEndYear" format="integer" />
        <attr name="iSelectYear" format="integer" />
    </declare-styleable>

    <declare-styleable name="iWheel_Month">
        <attr name="iSelectMonth" format="integer" />
    </declare-styleable>

    <declare-styleable name="iWheel_Day">
        <attr name="iYear" format="integer" />
        <attr name="iMonth" format="integer" />
        <attr name="iSelectDay" format="integer" />
    </declare-styleable>

</resources>